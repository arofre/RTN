<root>:

    random_label: random_label

    BoxLayout:
        orientation: "vertical"
        Label:
            text: "gui"
            font_size: 64
            color: 0.5, 0.5, 0.5
        Label:
            id: random_label
            text: "-"
            font_size: 64
        TextInput:
            id: input
            hint_text:'Enter text'
            pos_hint: {'center_x': 0.5, 'center_y': 0.705}
            size_hint: 0.95, 0.5
            on_text: root.process()
            multiline: False
            input_filter: 'int'
        Button:
            text: 'Submit'
            on_press: root.submit()

