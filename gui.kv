<MenuScreen>:
    GridLayout:
        cols: 1
        rows: 4
        padding: 20
        Label:
            text: "RTN"
            font_size: 64
            color: 0.5, 0.5, 0.5
        TextInput:
            id: input
            hint_text:'Enter text'
            pos_hint: {'center_x': 0.5, 'center_y': 0.705}
            size_hint: 0.95, 0.5
            on_text: root.process()
            multiline: False
            input_filter: 'int'
        Button:
            id: submit
            text: 'Submit'
            on_press: root.submit()
            on_press: root.manager.current = 'guess'
            disabled: True
        Button:
            text: 'Load previously numbers'
            on_press: root.manager.current = 'database'

<GuessScreen>:
    GridLayout:
        cols: 1
        rows: 1
        Label:
            id: guess_text
            valign: 'top'
            halign: 'center'
            text: "Guess the number"
            text_size: root.width, root.height
            color: 0.5, 0.5, 0.5
    GridLayout:
        cols: 3
        rows: 4
        padding: 20
        Button:
            id: one
            text: '1'
            on_press: root.guess(1)
        Button:
            id: two
            text: '2'
            on_press: root.guess(2)
        Button:
            id: three
            text: '3'
            on_press: root.guess(3)
        Button:
            id: four
            text: '4'
            on_press: root.guess(4)
        Button:
            id: five
            text: '5'
            on_press: root.guess(5)
        Button:
            id: six
            text: '6'
            on_press: root.guess(6)
        Button:
            id: seven
            text: '7'
            on_press: root.guess(7)
        Button:
            id: eight
            text: '8'
            on_press: root.guess(8)
        Button:
            id: nine
            text: '9'
            on_press: root.guess(9)
        Label:
            text: ''
        Button:
            id: zero
            text: '0'
            on_press: root.guess(0)
<DBScreen>:
    GridLayout:
        padding: 20
        cols: 1
        rows: 10
        TextInput:
            id: save_name
            hint_text:'Name'
            pos_hint: {'center_x': 0.5, 'center_y': 0.705}
            size_hint: 0.95, 0.5
            multiline: False
            on_text: root.save_process()
        TextInput:
            id: save_number
            hint_text:'Number'
            pos_hint: {'center_x': 0.5, 'center_y': 0.705}
            size_hint: 0.95, 0.5
            multiline: False
            input_filter: 'int'
            on_text: root.save_process()
        Button:
            id: save_button
            text: 'Save'
            disabled: True
            on_press: root.save_number()
        TextInput:
            id: load_name
            hint_text:'Load Number'
            pos_hint: {'center_x': 0.5, 'center_y': 0.705}
            size_hint: 0.95, 0.5
            multiline: False
            on_text: root.load_process()
        Button:
            id: load_button
            text: 'Load'
            on_press: root.load_number()
            disabled: True
        Button:
            text: 'Back to menu'
            on_press: root.manager.current = 'menu'