<MenuScreen>:

    random_label: random_label

    BoxLayout:
        orientation: "vertical"
        Label:
            text: "gui"
            font_size: 64
            color: 0.5, 0.5, 0.5
        Label:
            id: random_label
            text: "-"
            font_size: 64
        TextInput:
            id: input
            hint_text:'Enter text'
            pos_hint: {'center_x': 0.5, 'center_y': 0.705}
            size_hint: 0.95, 0.5
            on_text: root.process()
            multiline: False
            input_filter: 'int'
        Button:
            text: 'Submit'
            on_press: root.submit()
            on_press: root.manager.current = 'guess'
        Button:
            text: 'Goto settings'
            on_press: root.manager.current = 'settings'

<GuessScreen>:
    GridLayout:
        cols: 1
        rows: 1
        Label:
            valign: 'top'
            halign: 'center'
            text: "Guess the number"
            text_size: root.width, root.height
            color: 0.5, 0.5, 0.5
    FloatLayout:

        padding: 20
        Button:
            size_hint: 0.33, 0.156
            pos: 0, 354
            text: '1'
            on_press: root.guess(1)
        Button:
            size_hint: 0.33, 0.156
            pos: 118, 354
            text: '2'
            on_press: root.guess(2)
        Button:
            size_hint: 0.33, 0.156
            pos: 236, 354
            text: '3'
            on_press: root.guess(3)
        Button:
            size_hint: 0.33, 0.156
            pos: 0, 236
            text: '4'
            on_press: root.guess(4)
        Button:
            size_hint: 0.33, 0.156
            pos: 118, 236
            text: '5'
            on_press: root.guess(5)
        Button:
            size_hint: 0.33, 0.156
            pos: 236, 236
            text: '6'
            on_press: root.guess(6)
        Button:
            size_hint: 0.33, 0.156
            pos: 0, 118
            text: '7'
            on_press: root.guess(7)
        Button:
            size_hint: 0.33, 0.156
            pos: 118, 118
            text: '8'
            on_press: root.guess(8)
        Button:
            size_hint: 0.33, 0.156
            pos: 236, 118
            text: '9'
            on_press: root.guess(9)
        Button:
            size_hint: 0.33, 0.156
            pos: 118, 0
            text: '0'
            on_press: root.guess(0)
<SettingsScreen>:
    BoxLayout:
        Button:
            text: 'My settings button'
        Button:
            text: 'Back to menu'
            on_press: root.manager.current = 'menu'